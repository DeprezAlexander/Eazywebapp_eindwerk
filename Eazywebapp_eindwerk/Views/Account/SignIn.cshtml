<style>
    body{
        background-image:linear-gradient(rgba(99,65,234,.70), rgba(99,65,234,.70)), url('../img/login2.jpg');
        
    }
</style>

<div class="container logincontainer align-content-center">
    <h1 class="mt-5 pt-5 ml-5 pl-5 logintitle">Account login</h1>
    <form asp-controller="Account" asp-action="SignIn" method="post">
        <div class="row loginrow align-items-center">
            <div class="col-2"></div>
            <div class="col-8">
                <input class="form-control logininput" type="text" asp-for="UserName" placeholder="Username" />
            </div>
            <div class="col-2"></div>
            <div class="col-2"></div>
            <div class="col-8">
                <input class="form-control logininput" type="password" asp-for="Password" placeholder="Password" />
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row buttonrow align-items-center">
            <div class="col-2"></div>
            <div class="col-3 ml-4 d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-secondary loginbtn btn-lg" aria-disabled="false">Login</button>
            </div>
            <p class="mt-3">|</p>
            <div class="col-3">
                <a asp-controller="Account" asp-action="register" class="btn btn-outline-secondary registerbtn btn-lg" role="button" aria-disabled="false" >Register</a>
            </div>
            <div class="col-2"></div>
            
        </div>
    </form>
</div>
